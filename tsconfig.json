{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "lib": ["ESNext"],
      "outDir": "./build",
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false
    },
    "exclude": ["node_modules", "dist"],
  
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    }
  }